<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/iv_fragment_profile_prof_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/tv_fragment_profile_logout"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:contentDescription="@string/fragment_profile_pp_label"
        android:src="@drawable/ic_account_circle_black_24dp" />

    <TextView
        android:id="@+id/tv_fragment_profile_user_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/std_margin"
        android:layout_toEndOf="@id/iv_fragment_profile_prof_pic"
        android:layout_toRightOf="@id/iv_fragment_profile_prof_pic"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        tools:text="Nama Kita" />

    <TextView
        android:id="@+id/tv_fragment_profile_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_fragment_profile_user_full_name"
        android:layout_marginTop="@dimen/std_margin"
        android:layout_toEndOf="@id/iv_fragment_profile_prof_pic"
        android:layout_toRightOf="@id/iv_fragment_profile_prof_pic"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        tools:text="hakshajk@roket.com" />

    <TextView
        android:id="@+id/tv_fragment_profile_my_book"
        style="@style/hyperlink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_fragment_profile_user_email"
        android:layout_marginTop="@dimen/std_margin"
        android:layout_toEndOf="@id/iv_fragment_profile_prof_pic"
        android:layout_toRightOf="@id/iv_fragment_profile_prof_pic"
        android:paddingBottom="@dimen/std_hyperlink_padding"
        android:paddingEnd="@dimen/std_hyperlink_padding"
        android:paddingLeft="0dp"
        android:paddingRight="@dimen/std_hyperlink_padding"
        android:paddingStart="0dp"
        android:paddingTop="@dimen/std_hyperlink_padding"
        android:text="@string/fragment_profile_my_book_label" />

    <TextView
        android:id="@+id/tv_fragment_profile_logout"
        style="@style/hyperlink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_fragment_profile_my_book"
        android:layout_marginTop="@dimen/margin_2_hyperlink"
        android:layout_toEndOf="@id/iv_fragment_profile_prof_pic"
        android:layout_toRightOf="@id/iv_fragment_profile_prof_pic"
        android:clickable="true"
        android:padding="@dimen/std_hyperlink_padding"
        android:paddingBottom="@dimen/std_hyperlink_padding"
        android:paddingEnd="@dimen/std_hyperlink_padding"
        android:paddingLeft="0dp"
        android:paddingRight="@dimen/std_hyperlink_padding"
        android:paddingStart="0dp"
        android:paddingTop="@dimen/std_hyperlink_padding"
        android:text="@string/fragment_profile_logout_label" />

</RelativeLayout>